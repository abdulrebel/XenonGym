package com.sportsacademia.controller;

import java.util.List;
import java.util.Set;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.sportsacademia.model.Users;
import com.sportsacademia.service.UserService;

@CrossOrigin
@RestController
@RequestMapping("/user")
public class UsersController {

	
	@Autowired
	UserService userService;
	
	
	
	@GetMapping("/allUsers")
	public List<Users> getAllUsers() {
		return userService.getUsers();
	}
	
	@DeleteMapping("/delete/{id}")
	public void deleteUser(@PathVariable int id) {
		 userService.deleteUser(id);
	}
	
	@PutMapping("/update/{id}")
	public void updateUser(@RequestBody Users user,@PathVariable int id)
	{
		userService.modify(user, id);
	}
	
	@PostMapping("/getUsername")
	public Users getUsername(@RequestBody Users user) {
		
		String username = user.getUname();
		String password = user.getPassword();
		
		System.out.println(user);
		
		List<Users> lst = userService.getUsers();
		for(Users user1 : lst) {
		
			if((user1.getUname()).equals(username)&& (user1.getPassword()).equals(password)){
				//System.out.println(user1);
				return user1;
				
			}
			
		}
		
		return null;
	}
	
	
	
	
	
}
